{
  "name": "countries",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/countries/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/countries",
        "main": "packages/countries/src/index.ts",
        "tsConfig": "packages/countries/tsconfig.lib.json",
        "assets": [],
        "project": "packages/countries/package.json",
        "compiler": "swc"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs countries {args.ver} {args.tag}"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/countries/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/vite:test",
      "outputs": ["coverage/packages/countries"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/countries"
      }
    }
  },
  "tags": []
}
