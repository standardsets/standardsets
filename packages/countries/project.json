{
  "name": "countries",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/countries/src",
  "projectType": "library",
  "targets": {
    "build-internal": {
      "executor": "@nrwl/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/countries",
        "main": "packages/countries/src/index.ts",
        "tsConfig": "packages/countries/tsconfig.lib.json",
        "assets": [],
        "format": ["cjs", "esm"],
        "project": "packages/countries/package.json",
        "compiler": "swc",
        "javascriptEnabled": true,
        "generateExportsField": true,
        "skipTypeField": false
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/countries",
        "command": "yarn nx run countries:build-internal && yarn tsc -p ./packages/countries/tsconfig.declarations.json && cp ./packages/countries/README.md ./dist/packages/countries/README.md"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs countries {args.version} {args.tag} {args.otp}"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/countries/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/vite:test",
      "outputs": ["{workspaceRoot}/coverage/packages/countries"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/countries"
      }
    }
  },
  "tags": []
}
