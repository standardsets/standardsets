{
  "name": "core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/core/src",
  "projectType": "library",
  "targets": {
    "build-internal": {
      "executor": "@nrwl/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/core",
        "main": "packages/core/src/index.ts",
        "tsConfig": "packages/core/tsconfig.lib.json",
        "assets": [],
        "format": ["cjs", "esm"],
        "project": "packages/core/package.json",
        "rollupConfig": ["tools/scripts/rollupConfig.js"],
        "compiler": "swc",
        "javascriptEnabled": true,
        "generateExportsField": true,
        "skipTypeField": false
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/core",
        "command": "yarn nx run core:build-internal && yarn tsc -p ./packages/core/tsconfig.declarations.json && cp ./packages/core/README.md ./dist/packages/core/README.md"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs core {args.ver} {args.tag}"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/core/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/vite:test",
      "outputs": ["coverage/packages/core"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/core"
      }
    }
  },
  "tags": []
}
